
<div class="row">
  <%= @albums.each do |a| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag(a.cover)), album_path(a) %>
        <div class="caption">
          <h3 class="title"> <%= a.title %> </h3>
          <p class="artist"> <%= a.artist %> </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
